{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.spec.ts",
    "package.json"
  ],
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "inlineSourceMap": false,
    "inlineSources": false,
    "removeComments": true,
    "noEmitOnError": true
  }
}
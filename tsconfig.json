{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],

    "experimentalDecorators": true,
    "noImplicitAny": false,
    "skipLibCheck": true,

    // Bundler mode
    "target": "ES2020",
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
  }
}
